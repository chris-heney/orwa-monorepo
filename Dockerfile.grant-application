# Multi-stage build for React application
FROM node:18-alpine as build

WORKDIR /workspace

# Copy package files and workspace configuration
COPY package*.json ./
COPY nx.json ./
COPY tsconfig.base.json ./
COPY jest.config.ts ./
COPY jest.preset.js ./

# Copy the specific app and its dependencies
COPY apps/grant-application ./apps/grant-application/

# Install dependencies with legacy peer deps
RUN npm install --legacy-peer-deps

# Build the application using NX
RUN npx nx build grant-application --prod

# Production stage
FROM nginx:alpine

# Copy built assets from build stage
COPY --from=build /workspace/dist/apps/grant-application /usr/share/nginx/html

# Copy nginx configuration
COPY apps/grant-application/nginx.conf /etc/nginx/conf.d/default.conf

# Expose port
EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]

