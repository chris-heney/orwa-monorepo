# Multi-stage build for React application
FROM node:18-alpine as build

WORKDIR /workspace

# Copy package files and workspace configuration
COPY package*.json ./
COPY nx.json ./
COPY tsconfig.base.json ./
COPY jest.config.ts ./
COPY jest.preset.js ./

# Copy the specific app and its dependencies
COPY apps/grant-map ./apps/grant-map/

# Install dependencies
RUN npm install

# Build the application using NX
RUN npx nx build grant-map --prod

# Production stage
FROM nginx:alpine

# Copy built assets from build stage
COPY --from=build /workspace/dist/apps/grant-map /usr/share/nginx/html

# Copy nginx configuration
COPY apps/grant-map/nginx.conf /etc/nginx/conf.d/default.conf

# Expose port
EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]
