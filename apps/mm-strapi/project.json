{
  "name": "mm-strapi",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/mm-strapi/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "strapi build",
        "cwd": "apps/mm-strapi"
      }
    },
    "prune-lockfile": {
      "dependsOn": ["build"],
      "cache": true,
      "executor": "@nx/js:prune-lockfile",
      "outputs": [
        "{workspaceRoot}/dist/apps/mm-strapi/package.json",
        "{workspaceRoot}/dist/apps/mm-strapi/package-lock.json"
      ],
      "options": {
        "buildTarget": "build"
      }
    },
    "copy-workspace-modules": {
      "dependsOn": ["build"],
      "cache": true,
      "outputs": ["{workspaceRoot}/dist/apps/mm-strapi/workspace_modules"],
      "executor": "@nx/js:copy-workspace-modules",
      "options": {
        "buildTarget": "build"
      }
    },
    "prune": {
      "dependsOn": ["prune-lockfile", "copy-workspace-modules"],
      "executor": "nx:noop"
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "strapi develop",
        "cwd": "apps/mm-strapi"
      },
      "dependsOn": [
        {
          "target": "serve:mysql",
          "projects": "self"
        }
      ]
    },
    "serve:mysql": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cd ../ && docker compose down && docker compose up -d",
        "cwd": "apps/mm-strapi"
      }
    },
    "test": {
      "options": {
        "passWithNoTests": true
      }
    },
    "lint": {
      "executor": "nx:noop"
    },
    "docker:build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker buildx build --platform linux/amd64 --no-cache --target production -t orwa/mm-strapi:latest -f Dockerfile.mm-strapi .",
        "cwd": "{workspaceRoot}"
      }
    },
    "deploy": {
      "executor": "nx:run-commands",
      "dependsOn": ["docker:build"],
      "options": {
        "command": "docker push orwa/mm-strapi:latest"
      }
    }
  }
}