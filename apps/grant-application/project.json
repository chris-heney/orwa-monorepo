{
  "name": "grant-application",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/grant-application/src",
  "projectType": "application",
  "tags": [],
  "// targets": "to see all targets run: nx show project grant-application --web",
  "targets": {
    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/apps/grant-application"
      },
      "configurations": {
        "development": {
          "mode": "development"
        },
        "production": {
          "mode": "production"
        }
      }
    },
    "serve": {
      "executor": "@nx/vite:dev-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "grant-application:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "grant-application:build:development",
          "hmr": true
        },
        "production": {
          "buildTarget": "grant-application:build:production",
          "hmr": false
        }
      },
      "dependsOn": [{"projects": ["mm-strapi"], "target": "serve"}]
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["{options.reportsDirectory}"],
      "options": {
        "reportsDirectory": "../../coverage/apps/grant-application"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"]
    },
    "docker:build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker buildx build --platform linux/amd64 --no-cache --target production -t orwa/grant-application:latest -f Dockerfile.grant-application .",
        "cwd": "{workspaceRoot}"
      }
    },
    "deploy": {
      "executor": "nx:run-commands",
      "dependsOn": ["docker:build"],
      "options": {
        "command": "docker push orwa/grant-application:latest"
      }
    }
  }
}